@model NewslyAE.Models.EverythingWrapper;
@{
    ViewData["Title"] = "Search";
}

<h1>Exlore articles from around the globe</h1>

<h5>Please fill the form below to search for all articles available</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form name="searchProperties" asp-action="Search" onsubmit="EverythingInputNeeded(this)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Request.Keywords" class="control-label"></label>
                <input asp-for="Request.Keywords" class="form-control" />
                <span asp-validation-for="Request.Keywords" class="text-danger"></span>
            </div>
            <div class="form-group-source">
                <label asp-for="Request.Sources" class="control-label"></label>
                <input asp-for="Request.Sources" class="form-control" />
                <span asp-validation-for="Request.Sources" class="text-danger"></span>
                <p class="mask-source">
                    A comma-seperated string of identifiers for the news sources or blogs you want headlines from
                </p>
            </div>
            <div class="form-group-lang">
                <label asp-for="Request.Language" class="control-label"></label>
                <input asp-for="Request.Language" class="form-control" />
                <span asp-validation-for="Request.Language" class="text-danger"></span>
                <p class="mask-lang">
                    The 2-letter code of the language you want to get headlines in
                </p>
            </div>
            <div class="form-group-dom">
                <label asp-for="Request.Domains" class="control-label"></label>
                <input asp-for="Request.Domains" class="form-control" />
                <span asp-validation-for="Request.Domains" class="text-danger"></span>
                <p class="mask-dom">
                    A comma-seperated list of domains (eg bbc.co.uk, techcrunch.com, engadget.com) to restrict your search to.
                </p>
            </div>
            <div class="form-group">
                <label asp-for="Request.From" class="control-label"></label>
                <input asp-for="Request.From" class="form-control" />
                <span asp-validation-for="Request.From" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Request.To" class="control-label"></label>
                <input asp-for="Request.To" class="form-control" />
                <span asp-validation-for="Request.To" class="text-danger"></span>
            </div>

            <div class="form-group-sort">
                <label asp-for="Request.SortBy" class="control-label"></label>
                <select asp-for="Request.SortBy" class="form-control">
                    <option value="Relevancy">Revelancy</option>
                    <option value="Popularity">Popularity</option>
                    <option value="PublishedAt" selected="selected">Published at</option>
                </select>
                <span asp-validation-for="Request.SortBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Request.PageSize" class="control-label"></label>
                <input asp-for="Request.PageSize" value="20" class="form-control" />
                <span asp-validation-for="Request.PageSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Request.Page" class="control-label"></label>
                <input asp-for="Request.Page" value="1" class="form-control" />
                <span asp-validation-for="Request.Page" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary"
                       onclick="return EverythingInputNeeded()" />
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <img src="https://images.unsplash.com/photo-1566378246598-5b11a0d486cc?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80" 
             alt="NewsPapers" style="display:block;height: 700px;width: 700px;margin-left: auto;margin-right: auto;" />
    </div>
</div>
    @section Scripts {
        <script src="~\js\site.js"></script>
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
